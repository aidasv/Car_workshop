<div class="container">
  <div class="row mb-40">
    <div class="col-md-5 center-block">
      <div class="panel-heading">
        <div class="panel-title text-center">
            <h1 class="title">Prisijungimas</h1>
        </div>
      </div> 
      <%= form_tag 'login' do %>
        <div class="form-group">
          <label for="email" class="cols-sm-2 control-label">El.paštas</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope" aria-hidden="true"></i></span>
              <%= text_field_tag :email, nil, placeholder: "El.paštas ", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="password" class="cols-sm-2 control-label">Slaptažodis</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
              <%= password_field_tag :password, nil, placeholder: "Slaptažodis", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= submit_tag "Prisijungti", class: "btn btn-primary btn-lg btn-block login-button" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
