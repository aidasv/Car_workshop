<div class="container">
  <h2><%= link_to "Klientai", clients_path %> /
      <%= link_to "#{@car.client.name} #{@car.client.surname}", show_client_path(@car.client) %> /
      <%= link_to "#{@car.make} #{@car.model} #{@car.license_plate}", show_car_path(@car.client, @car) %>  
  </h2>
  <table class="table table-responsive table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>End Date</th>
        <th>Return</th>
        <th>Mileage</th>
        <th>Current Status</th>
      </tr>
    </thead>
    <tbody>
      <% @visits.each do |visit| %>
        <tr>
          <td><%= visit.id %></td>
          <td><%= visit.name %></td>
          <td><%= visit.end_date %></td>
          <td><%= visit.return_date %></td>
          <td><%= visit.mileage %></td>
          <td><%= visit.visit_statuses.last.name %></td>
          <td><%= link_to "Services", show_visit_path(visit.car.client, visit.car, visit), class: "btn btn-default" %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>